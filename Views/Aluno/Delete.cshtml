@model LibraryKeyApp.Models.Aluno

@{
    ViewData["Title"] = "Aluno";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este aluno?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Matrícula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        
        <dt class = "col-sm-2">
            Turno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Turno)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Telefone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-light" href="~/Aluno/Index">Voltar</a>

    </form>
</div>
